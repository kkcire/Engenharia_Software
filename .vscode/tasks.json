{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar e Executar (Make Smart)",
      "type": "shell",
      "command": "make",
      "args": [
        "run",
        "FILE=${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": { "kind": "build", "isDefault": true },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "showReuseMessage": false,
        "echo": false
      }
    }
  ]
}
